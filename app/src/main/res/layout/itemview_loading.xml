<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainBackGround"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_night">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:src="@drawable/background_skeleton_box"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/weatherNow_img"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:src="@drawable/background_skeleton_box"/>

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/background_skeleton_box"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/background_skeleton_box"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/background_skeleton_box"/>

                <LinearLayout
                    android:id="@+id/mainBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/background_night_box1"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        android:layout_weight="0.333"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:src="@drawable/background_skeleton_box"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/background_skeleton_box"/>

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/background_skeleton_box"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        android:layout_weight="0.333"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:src="@drawable/background_skeleton_box"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/background_skeleton_box"/>

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/background_skeleton_box"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        android:layout_weight="0.333"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:src="@drawable/background_skeleton_box"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/background_skeleton_box"/>

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/background_skeleton_box"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/background_skeleton_box"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/background_skeleton_box"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <include layout="@layout/itemview_loading_hourly"/>
                    <include layout="@layout/itemview_loading_hourly"/>
                    <include layout="@layout/itemview_loading_hourly"/>
                    <include layout="@layout/itemview_loading_hourly"/>
                    <include layout="@layout/itemview_loading_hourly"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                android:background="@drawable/background_night_box1">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_skeleton_box"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"
                    android:src="@drawable/background_skeleton_box"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>